@model SEINMX.Models.Directorio.ProveedorViewModel


@{
    ViewBag.Title = "Editar Proveedor";
    var labelAtt = new
    {
        @@class = "form-label"
    };
    var editformAtt = new
    {
        htmlAttributes = new
        {
            @@class = "form-control"
        }
    };
}


<div class="card shadow-sm">

@using (Html.BeginForm("GuardarCompleto", "Proveedor", FormMethod.Post, new { @class = "my-form" }))
{

    <div class="card-header bg-secondary text-white d-flex align-items-center">
        <div>
            <i class="fas fa-user"></i> Proveedor: @Model.Nombre
        </div>
        <div class="ms-auto">
            <button type="button" class="btn btn-light btn-sm me-2"
                    onclick="location.href='@Url.Action("Index", "Proveedor")'">
                <i class="fas fa-times"></i> Cancelar
            </button>

            <button type="submit"  class="btn btn-success btn-sm" >
                <i class="fas fa-save"></i> Guardar
            </button>
        </div>
    </div>

    <div class="card-body">

        <!-- FORM Proveedor -->
        <div class="row">
            <div class="col-md-6 mb-2">
                @Html.LabelFor(model => model.Nombre, labelAtt)
                @Html.EditorFor(model => model.Nombre, editformAtt)
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>

            <div class="col-md-2 mb-2">
                @Html.LabelFor(model => model.Tarifa, labelAtt)
                @Html.EditorFor(model => model.Tarifa, editformAtt)
                @Html.ValidationMessageFor(model => model.Tarifa)

            </div>

            <div class="col-md-2 mb-2">
                @Html.LabelFor(model => model.TarifaGanancia, labelAtt)
                @Html.EditorFor(model => model.TarifaGanancia, editformAtt)
                @Html.ValidationMessageFor(model => model.TarifaGanancia)
            </div>
        </div>

        <div class="col-md-12 mb-2">
            @Html.LabelFor(model => model.Direccion, labelAtt)
            @Html.EditorFor(model => model.Direccion, editformAtt)
            @Html.ValidationMessageFor(model => model.Direccion)
        </div>

        <div class="col-md-12 mb-2">
            @Html.LabelFor(model => model.Observaciones, labelAtt)
            @Html.EditorFor(model => model.Observaciones, editformAtt)
            @Html.ValidationMessageFor(model => model.Observaciones)
        </div>
        @Html.HiddenFor(model => model.IdProveedor)

    </div>
}
</div>


@section Scripts{

    @if (TempData["toast-success"] != null)
    {
        <script>
            $(document).ready(function () {
                setTimeout(() => {
                    location.href='@Url.Action("Index", "Proveedor")'
                }, 1500);

            });
    </script>
    }

}

