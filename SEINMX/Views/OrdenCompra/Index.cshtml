@using System.Globalization
@using SEINMX.Clases.Helpers
@model SEINMX.Models.Inventario.OrdenCompraBuscadorViewModel

@{
    ViewBag.Title = "Orden Compra";
    CultureInfo cultureMx = new CultureInfo("es-MX");

    var labelAtt = new
    {
        @@class = "form-label"
    };

    var editFilterAtt = new
    {
        htmlAttributes = new
        {
            @@class = "form-control",
            placeholder = "Buscar..."
        }
    };
}

<div class="container-fluid mt-4 px-sm-0">

    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h3 class="card-title">
                <i class="fa-solid fa-bag-shopping"></i> Lista de Ordenes de Compra
            </h3>
        </div>

        <div class="card-body">

            <!-- FILTROS -->
            @using (Html.BeginForm("Index", "OrdenCompra", FormMethod.Get, new { @class = "row g-3" }))
            {
                <div class="col-md-2">
                    @Html.LabelFor(model => model.IdOrdenCompra, labelAtt)
                    @Html.EditorFor(model => model.IdOrdenCompra, editFilterAtt)
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(model => model.IdCotizacion, labelAtt)
                    @Html.EditorFor(model => model.IdCotizacion, editFilterAtt)
                </div>

                <div class="col-md-4">
                    @Html.LabelFor(model => model.Cliente, labelAtt)
                    @Html.EditorFor(model => model.Cliente, editFilterAtt)
                </div>

                <!-- FILTRO DE Status -->
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Status, labelAtt)
                        @Html.DropDownListFor(
                            m => m.Status,
                            Model.GetComboStatus(),
                            new { @class = "form-select", id = "Status", name = "Status" }
                        )
                    </div>
                </div>

                <!-- BOTÓN DE BÚSQUEDA -->
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
            }

            <hr/>


            <!-- BOTÓN AGREGAR  -->
            <div class="mb-3">
                <button class="btn btn-primary"
                        onclick="location.href='@Url.Action("Nueva", "OrdenCompra")'">
                    Agregar Orden Compra
                </button>
            </div>


            <!-- TABLA -->
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-dark">
                    <tr>
                        <th><i class="fa-regular fa-calendar"></i> Fecha</th>
                        <th><i class="fa-solid fa-hashtag"></i> Orden Compra</th>
                        <th><i class="fas fa-id-card"></i> Cotización</th>
                        <th><i class="fas fa-user"></i> Cliente</th>
                        <th><i class="fa-solid fa-building-user"></i> Proveedor</th>

                        <th><i class="fas fa-tag"></i> Status</th>
                        <th><i class="fa-regular fa-money-bill-1"></i> Sub Total</th>
                        <th><i class="fa-regular fa-money-bill-1"></i> IVA</th>
                        <th><i class="fa-regular fa-money-bill-1"></i> Total</th>
                        <th><i class="fas fa-gear"></i> Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Ordenes)
                    {
                        <tr id="row-@item.IdOrdenCompra">
                            <td>@item.Fecha</td>
                            <td>@item.IdOrdenCompra</td>
                            <td>@item.Cotizacion</td>
                            <td>@item.Cliente</td>
                            <td>@item.Proveedor</td>

                            <td>
                                @Html.Raw(BadgeGenerator.Badge(item.Status,item.StatusDesc))
                            </td>

                            <td>
                                @string.Format(cultureMx, "{0:C}", item.SubTotal)
                            </td>
                            <td>
                                @string.Format(cultureMx, "{0:C}", item.Iva)
                            </td>
                            <td>
                                @string.Format(cultureMx, "{0:C}", item.Total)
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary"
                                        onclick="location.href='@Url.Action("Editar", "Cotizacion", new { id = item.IdOrdenCompra })'">
                                    <i class="fas fa-pen-to-square"></i>
                                </button>

                                <a class="OpenSideNav text-white btn btn-sm btn-secondary"
                                   href="@Url.Action("GenerarPdf", "OrdenCompra", new { id = item.IdOrdenCompra })"
                                   target="frameCB"> <i class="fa-regular fa-eye "></i></a>


                                <a class="btn btn-sm btn-secondary"
                                   href="@Url.Action("GenerarPdf", "OrdenCompra", new { id = item.IdOrdenCompra, file = true })">
                                    <i class="fa-regular fa-file-pdf"></i>
                                </a>


                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>

        </div>
    </div>


    <div class="row">
        <div id="SideframeCB" class="sidenav col-12 col-sm-12 col-md-10 col-lg-6 ">
            <a class="closebtn CloseSideNav" data-itn-sidenav="SideframeCB"
               data-itn-frame="frameCB">&times;Cerrar</a>
            <iframe id="frameCB" name="frameCB" class="border-0 h-100 col-12 col-md-12 col-lg-12"></iframe>
        </div>
    </div>

</div>

