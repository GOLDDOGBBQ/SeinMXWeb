@{
    ViewData["Title"] = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-box">
    <div class="card card-dark">
        <div class="card-header text-center">
            <h3>Cambiar Contraseña</h3>
        </div>
        <div class="card-body">

            @if(TempData["Mensaje"] != null)
            {
                <div class="alert alert-warning">
                    @TempData["Mensaje"]
                </div>
            }

            @if(ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post" asp-controller="Cuenta" asp-action="CambiarPassword">
                <div class="input-group mb-3">
                    <input type="password" name="nuevaPassword" class="form-control" placeholder="Nueva contraseña" required />
                    <div class="input-group-append">
                        <div class="input-group-text"><span class="fas fa-lock"></span></div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input type="password" name="confirmarPassword" class="form-control" placeholder="Confirmar contraseña" required />
                    <div class="input-group-append">
                        <div class="input-group-text"><span class="fas fa-lock"></span></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-dark btn-block">Actualizar Contraseña</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>