                            <div
                                class="d-flex align-items-center justify-content-md-center justify-content-start text-start">

                                <i class="fab fa-whatsapp fa-2x text-success me-3"></i>

                                <div>
                                    <div class="fw-bold">Teléfono / WhatsApp</div>
                                    <a class="text-light text-decoration-none"
                                       href="https://wa.me/5213323482809" target="_blank">
                                        +52 133 2348 2809
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- Correo -->
                        <div class="col-12 col-md-5">
                            <div
                                class="d-flex align-items-center justify-content-md-center justify-content-start text-start">
                                <i class="fas fa-envelope fa-2x text-warning me-3"></i>
                                <div>
                                    <div class="fw-bold">Correo electrónico</div>
                                    <a class="text-light text-decoration-none"
                                       href="mailto:atencionclientes@seinmx.com.mx">
                                        atencionclientes@seinmx.com.mx
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 pt-3 border-top">
                        <strong>SEINMX © @DateTime.Now.Year</strong>
                    </div>

                }
                else
                {
                    <strong>SEINMX © @DateTime.Now.Year</strong>
                }


            </div>
        </footer>

    </main>


</div>


<!-- JS -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script src="~/AdminLTE-4/js/adminlte.js"></script>



<script>
    function showToast(titulo, mensaje, tipo = "success") {
        const icon = tipo === "success"
            ? "fa-circle-check text-success"
            : "fa-circle-xmark text-danger";

        const toastId = "toast_" + Date.now();

        const html = `
        <div id="${toastId}" class="toast align-items-center text-bg-light border-0 shadow mb-3"
             role="alert" aria-live="assertive" aria-atomic="true"
             data-autohide="true" data-delay="5000">

            <div class="toast-header">
                <i class="fa-solid ${icon} me-2"></i>
                <strong class="me-auto">${titulo}</strong>
                <small>hace un momento</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>

            <div class="toast-body">
                ${mensaje}
            </div>
        </div>`;

        const container = document.getElementById("toastContainer");
        container.insertAdjacentHTML("beforeend", html);

        const toastEl = document.getElementById(toastId);
        const bsToast = new bootstrap.Toast(toastEl);
        bsToast.show();
    }
</script>


@await RenderSectionAsync("Scripts", required: false)




@if (TempData["toast-success"] != null)
{
    <script>
        $(document).ready(function () {
            showToast("Éxito", "@TempData["toast-success"]", "success");
        });
    </script>
}

@if (TempData["toast-error"] != null)
{
    <script>
        $(document).ready(function () {
            showToast("Error", "@TempData["toast-error"]", "error");
        });
    </script>
}



<script>
    function cambiarTema(tema) {
        const body = document.body;

        if (tema === "dark")
            body.classList.add("dark-mode");
        else
            body.classList.remove("dark-mode");

        document.cookie = "TemaUsuario=" + tema + "; path=/; max-age=" + (365 * 24 * 60 * 60);
    }

    document.addEventListener("DOMContentLoaded", () => {
        const match = document.cookie.match(/TemaUsuario=(dark|light)/);
        if (match) cambiarTema(match[1]);
    });
</script>

</body>
</html>
