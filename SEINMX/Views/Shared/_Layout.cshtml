                </li>
            </ul>
        }
        <div class="flex-grow-1"></div>

        <!-- Controles -->
        <ul class="navbar-nav ms-auto">

            <!-- Tema -->
            <li class="nav-item dropdown">
                <a class="nav-link" data-bs-toggle="dropdown">
                    <i class="fa-solid fa-circle-half-stroke"></i>Tema
