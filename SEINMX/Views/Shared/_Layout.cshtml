@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es" data-bs-theme="light">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>@ViewData["Title"] - SEINMX</title>

    <!-- Bootstrap + AdminLTE 4 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/AdminLTE-4/css/adminlte.css"/>

    <!-- Font Awesome 7.1 -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/fontawesome.min.css"/>
    <link rel="stylesheet" href="~/lib/fontawesome/css/solid.min.css"/>
    <link rel="stylesheet" href="~/lib/fontawesome/css/regular.min.css"/>
    <link rel="stylesheet" href="~/lib/fontawesome/css/brands.min.css"/>

    <script src="~/lib/fontawesome/js/fontawesome.min.js"></script>
    <script src="~/lib/fontawesome/js/solid.min.js"></script>
    <script src="~/lib/fontawesome/js/regular.min.js"></script>
    <script src="~/lib/fontawesome/js/brands.min.js"></script>

    <!--<script src="~/lib/jquery/dist/jquery.js"></script>-->

    <!-- jQuery necesario para AJAX -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>


    <style>
        .sidebar-logo {
            width: 85%;
            margin: 10px auto;
            display: block;
        }
    </style>
</head>

<body class="layout-fixed sidebar-expand-lg bg-body-tertiary app-loaded sidebar-collapse">

<div class="app-wrapper">
    <!-- NAVBAR -->
    <nav class="app-header navbar navbar-expand navbar-dark bg-dark" tabindex="-1">
        <!-- Botón Sidebar -->
        @if (User.Identity is { IsAuthenticated: true })
        {
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button">
                        <i class="fa-solid fa-bars"></i>
                    </a>
                </li>
            </ul>
        }
        <div class="flex-grow-1"></div>

        <!-- Controles -->
        <ul class="navbar-nav ms-auto">

            <!-- Tema -->
            <li class="nav-item dropdown">
                <a class="nav-link" data-bs-toggle="dropdown">
                    <i class="fa-solid fa-circle-half-stroke"></i>Tema
                </a>

                <div class="dropdown-menu dropdown-menu-end">
                    <button class="dropdown-item" onclick="cambiarTema('light')">
                        <i class="fa-solid fa-sun"></i> Claro
                    </button>
                    <button class="dropdown-item" onclick="cambiarTema('dark')">
                        <i class="fa-solid fa-moon"></i> Oscuro
                    </button>
                </div>
            </li>

            <!-- Login / Perfil -->
            @if (User.Identity is { IsAuthenticated: true })
            {
                <li class="nav-item dropdown">
                    <a class="nav-link" data-bs-toggle="dropdown">
                        <i class="fa-solid fa-circle-user"></i> @User.Identity.Name
                    </a>
                    <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item" href="/Cuenta/CambiarPassword">
                            <i class="fa-solid fa-lock"></i> Cambiar Contraseña
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/Cuenta/Logout">
                            <i class="fa-solid fa-right-from-bracket"></i> Cerrar sesión
                        </a>
                    </div>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Cuenta/Login">
                        <i class="fa-solid fa-right-to-bracket"></i> Iniciar sesión
                    </a>
                </li>
            }
        </ul>
    </nav>


    <!-- SIDEBAR -->
    @if (User.Identity is { IsAuthenticated: true })
    {
        <aside class="app-sidebar bg-body shadow" data-bs-theme="light">

            <div class="sidebar-brand text-center">
                <a href="~/">
                    <img src="/img/Sein-logo.webp" alt="Logo" class="sidebar-logo">
                </a>
            </div>

            <div class="sidebar-wrapper">
                <nav class="mt-3">
                    <ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="menu"
                        data-accordion="false">
                        <li class="nav-header">Menu</li>
                        <li class="nav-item">
                            <a href="/Cuenta/Inicio" class="nav-link">
                                <i class="nav-icon fa-solid fa-house"></i>
                                <p>Inicio</p>
                            </a>
                        </li>


                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fa-solid fa-file-invoice"></i>
                                <p>Cotizaciones
                                    <i class="nav-arrow fa-solid fa-angle-right"></i></p>

                            </a>


                            <ul class="nav nav-treeview">

                                <li class="nav-item">
                                    <a href="/Cotizacion/Nueva" class="nav-link">
                                        <i class="nav-icon fa-solid fa-plus"></i>
                                        <p>Crear Cotizacion</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="/Cotizacion/Crear" class="nav-link">
                                        <i class="fa-regular fa-circle nav-icon"></i>
                                        <p>Productos</p>
                                    </a>
                                </li>

                            </ul>
                        </li>



                        <li class="nav-item">
                            <a href="/Facturas/Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-file-invoice-dollar"></i>
                                <p>Facturas</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Cliente/Index" class="nav-link">
                                <i class="nav-icon fa-solid fa-users"></i>
                                <p>Clientes</p>
                            </a>
                        </li>

                        <!-- SUBMENÚ -->
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fa-solid fa-box"></i>
                                <p>Catálogo <i class="right fa-solid fa-angle-left"></i></p>
                            </a>

                            <ul class="nav nav-treeview">

                                <li class="nav-item">
                                    <a href="/Directorio/Catalogo" class="nav-link">
                                        <i class="fa-regular fa-circle nav-icon"></i>
                                        <p>Catálogo General</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="/Directorio/Productos" class="nav-link">
                                        <i class="fa-regular fa-circle nav-icon"></i>
                                        <p>Productos</p>
                                    </a>
                                </li>

                            </ul>
                        </li>

                    </ul>
                </nav>
            </div>

        </aside>
    }


    <main class="app-main">
        <div class="app-content-header">
        </div>
        <!-- CONTENIDO -->
        <div class="app-content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>

        <!-- FOOTER -->
        <footer class="main-footer text-center small">
            <strong>SEINMX © @DateTime.Now.Year</strong>
        </footer>
    </main>


</div>


<!-- JS -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script src="~/AdminLTE-4/js/adminlte.js"></script>


@await RenderSectionAsync("Scripts", required: false)

<script>
    function cambiarTema(tema) {
        const body = document.body;

        if (tema === "dark")
            body.classList.add("dark-mode");
        else
            body.classList.remove("dark-mode");

        document.cookie = "TemaUsuario=" + tema + "; path=/; max-age=" + (365 * 24 * 60 * 60);
    }

    document.addEventListener("DOMContentLoaded", () => {
        const match = document.cookie.match(/TemaUsuario=(dark|light)/);
        if (match) cambiarTema(match[1]);
    });
</script>

</body>
</html>
