
@model SEINMX.Models.Inventario.OrdenCompraPdfModel
@using SEINMX.Clases.Helpers
@using SEINMX.Clases.Utilerias

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <title>Orden de Compra - @Model.IdCotizacion</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="@UrlExtensions.Absolute("~/lib/bootstrap/dist/css/bootstrap.min.css")"/>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <style>

        html, body {
            height: 100%;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 10px;
            padding: 28px;
            display: flex;
            flex-direction: column;
        }

        .logo {
            width: 220px;
        }

        .doc-header {
            margin-bottom: 12px;
        }

        .doc-title {
            font-size: 18px;
            font-weight: 700;
        }
        .ColorTablePrincipal tr th {
            background-color: #000000 !important;
            color: #ffffff;
        }
        .summary-box {
            border: 1px solid #e3e3e3;
            padding: 10px;
            border-radius: 6px;
            background: #fafafa;
        }

        .totales-table td {
            padding: 4px 8px;
            font-size: 13px;
        }
        .table td, .table th {
            vertical-align: middle;
            font-size: 12px;
        }

        .table thead th {
            background: #f1f1f1;
            font-weight: 600;
        }

        .observaciones {
            margin-top: 12px;
            font-size: 12px;
        }

        .provider-block {
            margin-top: 10px;
            border: 1px dashed #ddd;
            padding: 8px;
            border-radius: 6px;
            background: #fff;
        }

        /* Footer sticky for PDF */
        .page-footer {
            margin-top: auto;
            padding-top: 1px;
            font-size: 11px;
            border-top: 1px solid #ccc;
        }

        @@media print {
            .page-footer {
                position: fixed;
                bottom: 0;
                left: 0;
                width: 100%;
            }
        }

        /* Small helpers */
        .small-muted {
            color: #6c757d;
            font-size: 11px;
        }
    </style>
</head>
<body>

<div class="container">

    <!-- HEADER -->
    <div class="row align-items-center doc-header mt-3">
        <div class="col-6 ps-1 pt-3">
            <img src="@UrlExtensions.Absolute("/img/Sein-logo-letras.webp")" alt="Logo" class="logo">
        </div>
        <div class="col-6 text-end">
            <div class="doc-title">ORDEN DE COMPRA</div>
            <div class="small-muted fw-bold"><strong>Número de Orden:</strong> @Model.IdCotizacion</div>
            <div class="small-muted fw-bold"><strong>Fecha
                    Colocación:</strong> @DateTime.Now.Date.ToString("dd De MMMM Del yyyy")</div>
        </div>
    </div>

    <!-- SUMMARY / DATOS PRINCIPALES -->
    <div class="row g-3 mt-3">
        <div class="col-md-12">
            <div class="summary-box">
                <div class="mb-1"><strong>Proveedor:</strong> <span>LUIS ROBERTO DE LA CRUZ ALVAREZ LALCARAZ</span>
                </div>
                <div class="mb-1"><strong>RFC:</strong> <span>CUAL780823HJA</span></div>
                <div class="mb-1"><strong>Condición de Pago:</strong> <span>Contado</span></div>
                <div class="mb-1"><strong>Moneda:</strong> <span>Pesos (MXN)</span></div>

            </div>
        </div>


    </div>

    <!-- TABLA DE ITEMS -->
    <div class="row mt-3">
        <div class="col-12">
            <table class=" table table-sm table-bordered table-striped">
                <thead class="table-secondary ColorTablePrincipal">
                <tr>
                    <th style="width:60px;">QTY</th>
                    <th style="width:120px;">ITEM / CÓDIGO</th>
                    <th>DESCRIPCIÓN</th>
                    <th class="text-end" style="width:110px;">PRECIO</th>
                    <th class="text-end" style="width:120px;">IMPORTE</th>
                </tr>
                </thead>
                <tbody>
                @{ decimal cSubTotal = 00; }
                @foreach (var item in Model.Detalles)
                {
                    var itemTotal = item.PrecioProveedor * item.Cantidad;
                    cSubTotal += itemTotal;

                    <tr>
                        <td class="align-middle text-center">@item.Cantidad</td>
                        <td class="align-middle">@item.Codigo</td>
                        <td class="align-middle">@item.Descripcion</td>
                        <td class="text-end align-middle">@item.PrecioProveedor.ToString("C2")</td>
                        <td class="text-end align-middle">@itemTotal.ToString("C2")</td>


                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    @{
        decimal cPorcentajeIVA = ((Model.PorcentajeIVA ?? 0) / 100);
        decimal cIVA = cSubTotal * cPorcentajeIVA;
        decimal cTotal = cSubTotal + cIVA;
    }
    <!-- TOTALES -->
    <div class="row mt-3">
        <div class="col-8 offset-4 text-end">
            <div class="summary-box">
                <table class="totales-table mt-2  ms-auto">
                    <tr>
                        <td class="text-end small-muted">Subtotal:</td>
                        <td class="text-end">@cSubTotal.ToString("C2")</td>
                    </tr>
                    <tr>
                        <td class="text-end small-muted">IVA:</td>
                        <td class="text-end">@cIVA.ToString("C2")</td>
                    </tr>
                </table>
                <div class="mb-1"><strong>TOTAL A PAGAR</strong></div>
                <div style="font-size:20px; font-weight:700;">@cTotal.ToString("C2")</div>

                <div>
                    <div><strong>Monto en letra:</strong></div>
                    <div>@NumeroEnLetras.NumeroALetras(cTotal)</div>
                </div>
            </div>
        </div>

    </div>

    <!-- OBSERVACIONES -->
    @*
    <div class="row mt-2">
        <div class="col-12">
            <div class="observaciones">
                <strong>Observaciones:</strong>
                <div>- [Aquí van observaciones si las hubiera]</div>
            </div>
        </div>
    </div>
    *@

    <!-- FOOTER (sticky en PDF) -->
    <div class="page-footer mt-3">
        <div class="row">
            <div class="col-12">
                <img src="@UrlExtensions.Absolute("/img/PiePagina.webp")" class="logo-inferior" alt="Logo Pie"
                     width="100%">
            </div>
        </div>
    </div>

</div>
</body>
</html>
